namespace abc\core\backend;

if (version_compare(phpversion(), '7.0.0', '<') == true){
	exit("\n\t\t\tphp v7.0.0+  Required for AbanteCart to work properly!\n");
}

//process command
$args = $argv;
//remove file name from argument list
array_shift($args);
//if no arguments - show help page
if($args){
	$command = array_shift($args);
}else{
	echo "Unknown command. Show help...\n\n";
	$command = 'help:help';
}

if(!strpos($command,':')){
	$command = 'help:help';
}

if(!preg_match('/^--(.*)$/', $command)) {
	list($class, $action) = explode(':',$command);
}else{
	echo "Wrong command.\n\n";
    $class = $action = '';
}

require 'core/init/backend.php';
require 'core/backend/interface.php';

if(!$class || $class=='help' || $action == 'help'){
	showHelpPage($class);
}

//try to get instance of executor or die
/**
 * @var \abc\core\backend\Install | array $executor
 */
$executor = getExecutor($class);


//get options
$options = parseOptions($args);

if(!$options && !$action){
	showHelpPage($class);
}

//validate command and options
$errors = (array)$executor->validate($action, $options);

if($errors){
	showError("Validation errors occurred");
	foreach($errors as $error){
		showError("\t".$error);
	}
	exit(1);
}

//run command
try{
	$result = $executor->run($action, $options);
    showResult($result);
}catch(\Exception $e){
	showError('Error: '.$e->getMessage());
	exit(1);
}

//if all fine - run post-trigger

try{
	$result = $executor->finish($action, $options);
    showResult($result);
}catch(\Exception $e){
	showError('Error: '.$e->getMessage());
	exit(1);
}

exit(0);